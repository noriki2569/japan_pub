<!DOCTYPE html>
<html>
  <head>
    <title>JapanPub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-light">
      <div class ="container">
        <h1><%= link_to "LOGO", root_path, :class => "btn btn-outline-dark btn-lg" %></h1>
        <ul class="navbar-nav bd-navbar-nav flex-row-left">
           <% if admin_signed_in? %>
           <li class="nav-item active">
               <%= link_to "商品一覧", admin_items_path, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <li>
               <%= link_to "会員一覧", admin_customers_path, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <li>
               <%= link_to "注文履歴詳細一覧", admin_root_path, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <li>
               <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <% elsif user_signed_in? %>
           <li>
               <%= link_to "マイページ", customers_show_path, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <li>
               <%= link_to "商品一覧", items_path, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <li>
               <%= link_to "カート", cart_items_path, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <li>
               <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, :class => "btn btn-outline-dark btn-xs" %>
           </li></br>
           <% else %>
           <li>
             <%= link_to "About", about_path, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <li>
             <%= link_to "商品一覧", items_path, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <li>
             <%= link_to "新規登録", new_customer_registration_path, :class => "btn btn-outline-dark btn-xs" %>
           </li>
           <li>
             <%= link_to "ログイン", new_customer_session_path, :class => "btn btn-outline-dark btn-xs" %>
           </li></br>
           <% end %>
       </ul>
      </div>
     </nav>
    </header>
    <%= yield %>
  </body>
</html>
