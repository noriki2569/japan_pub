<div class="lg-image vh80">
<div class="container">
  <div class="row">
    <%= image_tag "noren.png", size: "350x200" %>
  </div>
  <div class="row justify-content-left">
    <h1 class="m-4 text-color">ログイン</h1>
  </div>

  <%= form_with model: @user, url: user_session_path do |f| %>
  <div class="row justify-content-center">

    <div class="col-3">
      <%= f.label :email, "メールアドレス", class:"mb-4 text-color" %><br>
      <%= f.label :password, "パスワード", class:"text-color" %>
    </div>

    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-4" %><br>
      <%= f.password_field :password, autocomplete: "current-password"%>
    </div>
  </div>
  <div class="row mt-4">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
  <% end %>
</div>
</div>
