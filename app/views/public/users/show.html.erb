<div class="container vh">
  <div class="row ">
    <div class="col-md-4">
      <%= image_tag @user.get_profile_image(250,250), class:"mt-5 mb-4 border border-dark" %></br>
      <h2 class="mt-4 mb-4">
      <%= @user.nickname %></br>
      </h2>
      <h4 class="mb-4">
      <%= @user.self_introduction %></br>
      </h4>
      <%= link_to "編集", edit_user_path, class:"mt-4 mb-5 btn btn-success" %></br>
    </div>

    <div clas="col-md-8">
      <div class="row">
        <div class="col-4">
          <% @pubs.each do |pub| %>
          <% if pub.images.attached? %>
          <%= image_tag pub.images[0].variant(gravity: :center, resize:"200x200^") %></br>
          <% end %>
          <h6 class="mt-1 mb-1 mr-1">
            <%= link_to pub.name, pub_path(pub.id) %>
          </h6>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>