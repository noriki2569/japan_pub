<div class="container vh100">
  <div class="row vh100 align-items-center ">
    <div class="col-4">
      <% @pubs.each do |pub| %>
      <div class="field rounded ">
        <%= link_to pub.user.nickname, user_path(@user.id), class:"link" %><br>
        <% if pub.images.attached? %>
        <%= image_tag pub.images[0].variant(gravity: :center, resize:"200x200^") %><br>
        <% end %>
        <%= link_to pub.name, pub_path(pub.id), class:"link" %>
      </div>
      <% end %>
    </div>
  </div>
</div>