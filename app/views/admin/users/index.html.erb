<div class="container">
  <div class="row justify-content-left">
    <h1 class="mt-5 mb-4">会員一覧</h1>
  </div>

  <div class="row justify-content-center">
    <div class="col-10">
      <table class="table mr-4 ml-4">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to user.nickname, admin_user_path(user.id) %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted == true %>
              <font color="Secondary">
                退会
              </font>
              <% else %>
              <font color="success">
                有効
              </font>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>