<div class="container">
  <div class="row justify-content-left">
    <h1><%= @user.nickname %>さんの会員詳細</h1>
  </div>

  <div class="row">
    <div>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div>
      <%= link_to "編集",  edit_admin_user_path, class:"btn btn-success" %>
    </div>
  </div>
</div>