<div class="container">
  <div class="row justify-content-left">
    <h1><%= @user.nickname %>さんの会員詳細編集</h1>
  </div>

  <div class="row">
    <%= form_with model: @user, url: admin_user_path, method: :patch do |user| %>
    <div>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= user.text_field :nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= user.text_field :email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div>
      <%= user.submit "保存", class:"btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>