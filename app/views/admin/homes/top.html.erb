<div class="container vh">
  <div class="row justify-content-center">
    <h2 class="mt-4 mb-4">居酒屋一覧</h2>
  </div>

  <div class="row">
    <% @pubs.each do |pub| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-header">
            <%= pub.user.nickname %>
          </div>
          <% if pub.images.attached? %>
            <%= image_tag pub.images.first.variant(resize_to_limit: [300, 300]).processed, class: "pub-card-image" %><br>
          <% else %>
            <%= image_tag "no-image.jpg".processed, class: "pub-card-image" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= pub.name %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>

